<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#12091A"
    android:clipChildren="false"
    android:clipToPadding="false">

    <!-- ðŸ”µ BACKGROUND RADIAL FADE -->
    <ImageView
        android:id="@+id/backgroundRadial"
        android:layout_width="1000dp"
        android:layout_height="1000dp"
        android:src="@drawable/splash_radial_bg"
        android:layout_gravity="center"
        android:alpha="0.35" />

    <!-- ðŸ”µ BIG GLOW (Pulse Animation Applied in Kotlin Only) -->

    <!-- ðŸ”µ SMALL CENTER GLOW -->

    <!-- âšª GLASS ORB + INNER SHAPES -->
    <FrameLayout
        android:id="@+id/orbFrame"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_gravity="center"
        android:clipToOutline="false"
        >

        <!-- Glass Orb -->
        <ImageView
            android:id="@+id/glassOrb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/glass_orb"
            android:clipToOutline="false"/>

    </FrameLayout>

    <!-- ðŸ”¤ APP NAME -->

    <ImageView
        android:id="@+id/bigGlow"
        android:layout_width="341dp"
        android:layout_height="372dp"
        android:layout_gravity="bottom|center_horizontal"
        android:src="@drawable/big_glow"
        android:translationY="80dp"
        android:clipToOutline="false"/>

    <ImageView
        android:id="@+id/smallGlow"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_gravity="center"
        android:src="@drawable/small_glow"
        android:clipToOutline="false"/>
    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="110dp"
        android:letterSpacing="0.20"
        android:text="SplitSavvy"
        android:textColor="#F0FFFFFF"
        android:textSize="32sp"
        android:textStyle="bold" />

</FrameLayout>
