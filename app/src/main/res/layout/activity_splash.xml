<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#12091A">

    <!-- BIG Glow (bottom right, pulse) -->
    <ImageView
        android:id="@+id/bigGlow"
        android:layout_width="480dp"
        android:layout_height="480dp"
        android:src="@drawable/big_glow"
        android:layout_gravity="bottom|end"
        android:translationX="80dp"
        android:translationY="120dp"/>


    <!-- SMALL Glow (behind orb) -->
    <ImageView
        android:id="@+id/smallGlow"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:src="@drawable/small_glow"/>

    <!-- GLASS ORB + INNER SHAPES -->
    <FrameLayout
        android:id="@+id/orbFrame"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center">

        <!-- Inner Shape 1 -->
        <ImageView
            android:id="@+id/inner1"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:translationX="-20dp"
            android:translationY="20dp"
            android:rotation="30"
            android:src="@drawable/inner_shape_1"/>

        <!-- Inner Shape 2 -->
        <ImageView
            android:id="@+id/inner2"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:translationX="25dp"
            android:translationY="-20dp"
            android:rotation="-45"
            android:src="@drawable/inner_shape_2"/>

        <!-- Glass Orb -->
        <ImageView
            android:id="@+id/glassOrb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/glass_orb"/>

    </FrameLayout>

    <!-- App Name -->
    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="100dp"
        android:text="SplitSavvy"
        android:textSize="32sp"
        android:textStyle="bold"
        android:letterSpacing="0.20"
        android:textColor="#F0FFFFFF"/>

</FrameLayout>
