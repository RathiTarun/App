<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#12091A">

    <!-- ðŸ”µ BACKGROUND RADIAL FADE -->
    <ImageView
        android:id="@+id/backgroundRadial"
        android:layout_width="1000dp"
        android:layout_height="1000dp"
        android:src="@drawable/splash_radial_bg"
        android:layout_gravity="center"
        android:alpha="0.35" />

    <!-- ðŸ”µ BIG GLOW (Pulse Animation Applied in Kotlin Only) -->

    <!-- ðŸ”µ SMALL CENTER GLOW -->

    <!-- âšª GLASS ORB + INNER SHAPES -->
    <FrameLayout
        android:id="@+id/orbFrame"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_gravity="center">

        <!-- Inner Shape 1 -->
        <ImageView
            android:id="@+id/inner1"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:translationX="-18dp"
            android:translationY="18dp"
            android:rotation="30"
            android:src="@drawable/inner_shape_1" />

        <!-- Inner Shape 2 -->
        <ImageView
            android:id="@+id/inner2"
            android:layout_width="95dp"
            android:layout_height="80dp"
            android:translationX="26dp"
            android:translationY="-28dp"
            android:rotation="-45"
            android:src="@drawable/inner_shape_2" />

        <!-- Glass Orb -->
        <ImageView
            android:id="@+id/glassOrb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/glass_orb" />

    </FrameLayout>

    <!-- ðŸ”¤ APP NAME -->

    <ImageView
        android:id="@+id/bigGlow"
        android:layout_width="341dp"
        android:layout_height="372dp"
        android:layout_gravity="bottom|center_horizontal"
        android:src="@drawable/big_glow"
        android:translationY="80dp" />

    <ImageView
        android:id="@+id/smallGlow"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_gravity="center"
        android:src="@drawable/small_glow" />
    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="110dp"
        android:letterSpacing="0.20"
        android:text="SplitSavvy"
        android:textColor="#F0FFFFFF"
        android:textSize="32sp"
        android:textStyle="bold" />

</FrameLayout>
